<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:rotationY="180"
            android:src="@drawable/arrow_last" />

        <TextView
            android:id="@+id/personal_info_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="酷貓一隻的個人資訊"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/user_pic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:src="@drawable/user_pic" />

    </LinearLayout>

    <ImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:src="@drawable/oval_1"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="67dp"
        />

    <LinearLayout

        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_pic_layout">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="酷貓一隻"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_stat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_layout">

        <TextView
            android:id="@+id/user_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="普通使用者"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_setup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_stat_layout">

        <Button
            android:id="@+id/btn_person_setup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="修改個人資訊"
            ></Button>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        android:background="@color/grey"
        android:alpha="0.7"
        />

    <LinearLayout
        android:id="@+id/achievement_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_stat_layout"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="成就欄"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/arrow_last" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ach_pic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/achievement_layout"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/ach_pic_1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/ach_pic_1"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/ach_pic_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ach_pic_2"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/ach_pic_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ach_pic_3"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ach_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ach_pic_layout"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="初出茅廬"
            android:textColor="@color/purple_200"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="輕輕鬆鬆"
            android:textColor="@color/purple_200"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="競賽博士"
            android:textColor="@color/purple_200"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ach_name"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="聯絡方式"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/arrow_last" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_layout"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/contact_pic_1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:background="@drawable/fb_pic"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/contact_pic_2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/line_pic"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/contact_pic_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ig_pic"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>
